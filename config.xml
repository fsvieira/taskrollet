<?xml version='1.0' encoding='utf-8'?>
<widget id="taskroulette.fsvieira.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Task Roulette</name>
    <description>
		Task Roulette your personal project manager.
    </description>
    <author email="sv.filipe@gmail.com" href="http://www.fsvieira.com">
		Filipe Vieira
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
	<!--
		ldpi    : 36x36 px
        mdpi    : 48x48 px
        hdpi    : 72x72 px
        xhdpi   : 96x96 px
        xxhdpi  : 144x144 px
        xxxhdpi : 192x192 px
    -->
        
    <icon src="res/icons/taskroulette-36x36.png" density="ldpi" />
    <icon src="res/icons/taskroulette-48x48.png" density="mdpi" />
    <icon src="res/icons/taskroulette-72x72.png" density="hdpi" />
    <icon src="res/icons/taskroulette-96x96.png" density="xhdpi" />
    <icon src="res/icons/taskroulette-144x144.png" density="xxhdpi" />
    <icon src="res/icons/taskroulette-192x192.png" density="xxxhdpi" />
</widget>
